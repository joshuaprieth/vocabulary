{
    "manifest_version": 3,
    "name": "Vocabulary Context Menu",
    "version": "1.0",
    "description": "Right-click to learn a word",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "host_permissions": [],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Vocabulary Tool",
        "default_popup": "popup.html"
    }
}
